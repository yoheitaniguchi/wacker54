{
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true,
    "node": true,
    "jquery": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "array-bracket-spacing":  ["error", "always"],
    "eqeqeq": ["error", "smart"],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "no-cond-assign": "off",
    "no-console": "off",
    "no-unexpected-multiline": "error",
    "object-curly-spacing": ["error", "always"],
    "quotes": ["error", "single", "avoid-escape"],
    "semi": ["error", "never"],
    "space-in-parens": ["error", "always"]
  },
  "globals": {
    "expect": true,
    "body": true,
    "chai": true,
    "sinon": true,
    "riot": true,
    "route": true,
    "opts": true,
    "L": true,
    "config": true,
    "request": true,
    "slideout": true
  },
  "plugins": ["riot"]
}
